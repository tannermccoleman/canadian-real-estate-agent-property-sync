<input type="hidden" name="post_type" value="">

<div class="control-group">
    <label class="control-label" for="address">
        {{ wp.__('Image', 'aviators') }}
    </label>

    <div class="controls">
        {% if wp.has_post_thumbnail(post.ID) %}
            {{ wp.get_the_post_thumbnail(post.ID, 'admin-thumb')|raw }}
            <a href="?action=delete-thumbnail&id={{ post.ID }}">{{ wp.__('Remove', 'aviators') }}</a>
        {% else %}
            <input type="file" name="featured_image">
        {% endif %}
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="address">
        {{ wp.__('Address', 'aviators') }}
    </label>

    <div class="controls">
        <input type="text" name="post_title" size="30" value="{{ post.post_title }}" id="address" autocomplete="off" required="required">
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="description">
        {{ wp.__('Description', 'aviators') }}
    </label>

    <div class="controls">
        <textarea id="description" class="wp-editor-area" rows="10" name="content" required="required">{{ post.post_content }}</textarea>
    </div>
</div>

<div class="control-group">
    <label class="control-label">
        {{ wp.__('Type', 'aviators') }}
    </label>

    <div class="controls">
        {{ property_types|raw }}
    </div>
</div>

<div class="control-group">
    <label class="control-label">
        {{ wp.__('Location', 'aviators') }}
    </label>

    <div class="controls">
        {{ property_locations|raw }}
    </div>
</div>

<div class="control-group">
    <label class="control-label">
        {{ wp.__('Amenities', 'aviators') }}
    </label>

    <div class="controls">
        <ul class="unstyled">
            {{ amenities|raw }}
        </ul>
    </div>
</div>
