<div class="pull-left overview">
<div style="float:right;">
            {% if wp.get_the_post_thumbnail(property.ID) %}
                {{ wp.get_the_post_thumbnail(property.ID)|raw }}
            {% else %}
                <img  src="{{ wp.get_template_directory_uri() }}/assets/img/property-tmp-small.png" alt="{{ property.post_title }}">
            {% endif %}
</div>
    <div class="row">
        <div class="span3">
            <h2>{{ wp.__('Overview', 'aviators') }}</h2>
            <table>
                <tbody>
                <tr>
                    <th>{{ wp.__('ID', 'aviators') }}:</th>
                    <td><strong>#{% if wp.get_post_meta(post.ID, '_property_id').0 %}{{ wp.get_post_meta(post.ID, '_property_id').0 }}{% else %}{{ post.ID }}{% endif %}</strong></td>
                </tr>

                {% if wp.get_post_meta(post.ID, '_property_price').0 %}
                    <tr>
                        <th>{{ wp.__('Price', 'aviators') }}:</th>
                        <td>
                            {{ wp.aviators_price_format(wp.get_post_meta(post.ID, '_property_price').0) }}
                        </td>
                    </tr>
                {% endif %}

                {% if wp.get_post_meta(post.ID, '_property_contract_type').0 %}
                <tr>
                    <th>{{ wp.__('Contract type', 'aviators')}}: </th>
                    <td>
                        {% if wp.get_post_meta(post.ID, '_property_contract_type').0 == 'rent' %}
                        {{ wp.__('For rent', 'aviators') }}
                        {% elseif wp.get_post_meta(post.ID, '_property_contract_type').0 == 'sale' %}
                            {{ wp.__('For sale', 'aviators') }}
                        {% endif %}
                    </td>
                </tr>
                {% endif %}

                <tr>
                    <th>{{ wp.__('Type', 'aviators') }}:</th>
                    <td>{{ wp.wp_get_post_terms(post.ID, 'property_types').0.name }}</td>
                </tr>

                <tr>
                    <th>{{ wp.__('Location', 'aviators') }}:</th>
                    <td>{{ wp.wp_get_post_terms(post.ID, 'locations').0.name }}</td>
                </tr>

                {% if wp.get_post_meta(post.ID, '_property_bathrooms').0 %}
                    <tr>
                        <th>{{ wp.__('Bathrooms', 'aviators') }}:</th>
                        <td>{{ wp.get_post_meta(post.ID, '_property_bathrooms').0 }}</td>
                    </tr>
                {% endif %}

                {% if wp.get_post_meta(post.ID, '_property_bedrooms').0 %}
                    <tr>
                        <th>{{ wp.__('Bedrooms', 'aviators') }}:</th>
                        <td>{{ wp.get_post_meta(post.ID, '_property_bedrooms').0 }}</td>
                    </tr>
                {% endif %}

                {% if wp.get_post_meta(post.ID, '_property_area').0 %}
                    <tr>
                        <th>{{ wp.__('Area', 'aviators') }}:</th>
                        <td>{{ wp.get_post_meta(post.ID, '_property_area').0 }}{{ wp.aviators_settings_get_value('properties', 'units', 'area')|raw }}</td>
                    </tr>
                {% endif %}
                
                {% if wp.get_post_meta(post.ID, '_property_key').0 %}
                    <tr>
                        <th>{{ wp.__('MLS #', 'aviators') }}:</th>
                        <td>{{ wp.get_post_meta(post.ID, '_property_key').0 }}</td>
                    </tr>
                {% endif %}
                
                </tbody>
            </table>
        </div><!-- /.span2 -->
    </div><!-- /.row -->
</div><!-- /.overview -->